{
  "version": 2,
  "github": {
    "silent": true
  },
  "builds": [
    {
      "src": "backend/src/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "backend/**",
          "frontend/dist/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/.*",
      "dest": "backend/src/index.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    },
    {
      "src": "/socket.io/.*",
      "dest": "backend/src/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "backend/src/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}